eleventyNavigation:
  key: Archive
  order: 2
---

<h1 class="title">Archive</h1>

{% set postslist = collections.posts %}

<ul class="list-group">
{% for post in postslist | reverse %}
    <li class="list-group-item d-flex justify-content-between align-items-center{% if post.url == url %} active{% endif %}">
        <a href="{{ post.url }}" class="postlist-link">
            {% if post.data.title %}
                {{ post.data.title }}
            {% else %}
                <code>{{ post.url }}</code>
            {% endif %}
        </a>
        <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">
            {{ post.date | readableDate("LLLL yyyy") }}
        </time>
    </li>
{% endfor %}
</ul>
